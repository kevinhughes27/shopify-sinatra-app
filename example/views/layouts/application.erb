<!DOCTYPE html>
<html lang="en">
<head>
  <script src="https://unpkg.com/@shopify/app-bridge@3"></script>
  <script type="text/javascript">
    var AppBridge = window['app-bridge'];

    var host = '<%= shop_host %>';
    var apiKey = '<%= SinatraApp.settings.api_key %>';

    var app = AppBridge.createApp({
      apiKey: apiKey,
      host: host
    });
  </script>
