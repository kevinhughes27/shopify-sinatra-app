<script type="text/javascript">
  var AppBridge = window['app-bridge'];

  var actions = AppBridge.actions;
  var Toast = actions.Toast;

  <% if flash[:notice] %>
    var notice = Toast.create(app, {
      message: "<%= flash[:notice] %>",
      duration: 5000
    });

    notice.dispatch(Toast.Action.SHOW);
  <% end %>

  <% if flash[:error] %>
    var notice = Toast.create(app, {
      message: "<%= flash[:error] %>",
      duration: 5000,
      isError: true,
    });

    notice.dispatch(Toast.Action.SHOW);
  <% end %>
</script>
